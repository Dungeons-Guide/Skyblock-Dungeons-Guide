<padding left="5" top="5" right="5" bottom="5">
    <col>
        <Text text="You need to have Ask To Join Enabled to use this feature." color="#FFFFFFFF"/>
        <flexible>
            <size height="0"/>
        </flexible>
        <row>
            <flexible>
                <size height="15">
                    <RoundButton text="Enable" on:click="enable"

                                 backgroundColor="#FF00838F"          textColor="#FFFFFFFF"
                                 hoveredBackgroundColor="#FF00ACC1"   hoveredTextColor="#FFFFFFFF"
                                 disabledBackgroundColor="0"  disabledTextColor="0"
                                 pressedBackgroundColor="#FF0097A7"   pressedTextColor="#FFFFFFFF"/>
                </size>
            </flexible>
            <size width="5"/>
            <flexible>
                <size height="15">
                    <RoundButton text="Cancel" on:click="cancel" backgroundColor="#FF373737" hoveredBackgroundColor="#FF3B3B3B" pressedBackgroundColor="#FF383838"/>
                </size>
            </flexible>
        </row>
    </col>
</padding>